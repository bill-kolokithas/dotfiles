pcm.dmixer {
	type asym
	playback.pcm {
		type dmix

		ipc_key_add_uid true
		ipc_key 5678293
		ipc_perm 0660
		ipc_gid audio

		slave {
			channels 2
			pcm {
				format S32_LE
				rate 44100
				nonblock true

				type hw
				card 0
				device 0
				subdevice 0
			}

			period_size 1024
			buffer_size 8192
		}
	}
	capture.pcm "hw:0"
}

pcm.!default {
	type plug
	slave.pcm "dmixer"
}

pcm.headphones {
	type rate
	slave {
		pcm "plug:dmixer"
		rate 44100
	}
	converter "samplerate_best"

	hint {
		show on
		description "Headphones"
}
}

